def get_number():
    try:
        val = int(input("Enter number: "))
    except ValueError:
        print("Try another value.")
        get_number()
    return val


def collatza(number):
    if number % 2 == 0:
        return number / 2
    elif number % 2 != 0:
        return 3 * number + 1


def runner():
    user_number = get_number()
    a = collatza(user_number)
    while a != 1:
        a = collatza(a)
        print(int(a))


runner()
